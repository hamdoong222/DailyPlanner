<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="2020"
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="."
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="8"
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="."
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Week"
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="1"
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="@android:color/black" />
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Day"
                    android:textColor="@android:color/black"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@android:color/black"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="MON"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <ImageView
                    android:onClick="onClickCalendar"
                    android:layout_marginLeft="20dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_menu_my_calendar"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="@android:color/black" />
            <include
                android:id="@+id/layout_todo_button"
                layout="@layout/layout_add_remove_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginRight="25dp"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/layout3"
                android:layout_width="390dp"
                android:layout_height="40dp"
                android:layout_below="@id/layout2"
                android:background="#9cdae5">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Check"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="To do list"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/todo_layout"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout3"
                android:orientation="vertical">
            </LinearLayout>

            <include
                android:id="@+id/layout_subject_button"
                layout="@layout/layout_add_remove_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginRight="25dp"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/layout41"
                android:layout_width="390dp"
                android:layout_height="40dp"
                android:layout_below="@id/todo_layout"
                android:background="#9cdae5">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Check"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Subject"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Goal"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/subject_layout"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout41"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject_layout"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/achievement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Achievement"
                    android:textColor="@android:color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/percent"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout5">
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:id="@+id/layout6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout"
                    android:layout_gravity="center_vertical">
                    <ImageView
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:scaleType="centerCrop"
                        android:paddingHorizontal="1dp"
                        android:paddingVertical="1dp"
                        android:cropToPadding="true" />

                    <ImageView
                        android:paddingHorizontal="1dp"
                        android:paddingVertical="1dp"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:scaleType="centerCrop"
                        android:cropToPadding="true" />

                    <ImageView
                        android:paddingHorizontal="1dp"
                        android:paddingVertical="1dp"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:cropToPadding="true" />

                    <ImageView
                        android:paddingHorizontal="1dp"
                        android:paddingVertical="1dp"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:cropToPadding="true" />

                    <ImageView
                        android:paddingHorizontal="1dp"
                        android:paddingVertical="1dp"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:cropToPadding="true" />

                    <ImageView
                        android:paddingHorizontal="1dp"
                        android:paddingVertical="1dp"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:cropToPadding="true" />

                    <ImageView
                        android:paddingHorizontal="1dp"
                        android:paddingVertical="1dp"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:cropToPadding="true" />

                    <ImageView
                        android:paddingHorizontal="1dp"
                        android:paddingVertical="1dp"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:cropToPadding="true" />

                    <ImageView
                        android:paddingHorizontal="1dp"
                        android:paddingVertical="1dp"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:cropToPadding="true"/>

                    <ImageView
                        android:paddingHorizontal="1dp"
                        android:paddingVertical="1dp"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:cropToPadding="true"/>

                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/layout7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout6"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/comment"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/comment"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Comment"
                    android:textColor="@android:color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.gms.ads.AdView
                    android:layout_gravity="center"
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-7732840744984058/7847208075">
                </com.google.android.gms.ads.AdView>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>